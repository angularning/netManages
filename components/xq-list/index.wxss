/* pages/service/index.wxss */
.normalTabHeight {
  height: 86vh;
  background: #F2F3F6;
}

.normalServiceList {
  background: #fff;
  border-radius: 10px;
  margin: 0 2.5%;
  padding: 10px 2.5%;
  width: 90%;
  margin-top: 12px;
  /* border-top: 10px #F2F3F6 solid; */
}

.normalServiceListTop {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: baseline;
}


.normalServiceListTitle{
  font-size: 1rem;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #1C2D5A;
}


.normalServiceListLastTime view{
  font-size: 12px;
  color: rgba(28, 45, 90, 0.5);
}
.normalServiceListLastTimeView{
  display: flex;
  flex-flow: row nowrap;
  justify-content: left;
  align-items: baseline;
}
.van-count-down{
  margin-right: 5px;
  color: #F13D3D !important;
}

.normalServiceListBottom {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: baseline;
  margin-top: 20px;
}

.normalServiceListBottom :last-child {
  font-size: 13px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #1C2D5A;
}

.normalServiceTipImg image{
  vertical-align: center;
}

.normalServiceTipText {
  font-size: 13px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
}
