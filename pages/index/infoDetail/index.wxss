page{
  background: #f9f9f9;
}
.info{
  background-color: #fff;
  margin: 12px;
  padding: 12px;
  border-radius: 10px;
}
.infoBody{
  font-size: 16px;
  color: #666;
  text-align: left;
  overflow: hidden;
  line-height: 2;
}

.infoBody image{
  width: 100%;
}
.infoHeader{
  text-align: left;
  border-bottom: 1px #eee solid;
  padding-bottom: 20px;
}
.title{
  text-align: center;
  font-size: 24px;
  padding: 15px;
}
.infoExtral{
  display: flex;
  flex-flow: row nowrap;
  justify-content: left;
  align-items: center;
  font-size: 14px;
  color: #999;
}
.source{
  margin-left: 10px;
}